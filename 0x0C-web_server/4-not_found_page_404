#!/usr/bin/env bash
#script than lanch nginx on port 80
apt-get -y update
apt-get install -y nginx
sudo sed -i '0,/listen.*/s/listen.*/listen 80 default_server;/' /etc/nginx/sites-enabled/default
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html
sudo sed -i "/server_name _;/a \\\nrewrite ^/(.*) https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;" /etc/nginx/sites-enabled/default
sudo echo "Ceci n'est pas une page" > /var/www/html/custom_404.html
chmod 644 /var/www/html/custom_404.html
sed -i "/server_name _;/ a \\\nerror_page 404 /custom_404.html;" /etc/nginx/sites-available/default
sudo service nginx restart

